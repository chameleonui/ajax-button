
// import some mixins dependencies
@import "../components/chameleonui-utils/vendors"
@import "../components/chameleonui-css3/box-shadow"
@import "../components/chameleonui-css3/box-sizing"
@import "../components/chameleonui-css3/border-radius"
@import "../components/chameleonui-css3/font-smoothing"
@import "../components/chameleonui-css3/opacity"
@import "../components/chameleonui-css3/transition"


// styles
body
    margin: 0
    padding: 1em
    font-family: sans-serif
    box-sizing: border-box
    color: #393939

    *
        box-sizing: border-box

input[type="text"]
    display: block
    width: 100%
    margin: 0
    padding: .4em .6em
    border: 2px solid #e0e0e0
    font-size: 100%
    border-radius: 2px

label
    display: block
    margin: .5em 0
    color: #999999




.button-default
.button-disabled
.button-primary
    display: inline-block
    margin: 0
    padding: .7em 1em
    border-radius: 2px
    cursor: pointer
    outline: 0 none
    box-shadow: none
    border-style: solid
    border-width: 2px
    font-smoothing: antialiased
    transition: all .2s
    text-decoration: none

.button-default
    background: #eaeaea
    border-color: #e0e0e0
    color: #393939

    &:hover
        background: #e0e0e0
    
.button-disabled
    background: #eaeaea
    border-color: #e0e0e0
    color: #393939
    opacity: .6
    cursor: default

    &:hover
        cursor: progress

.button-primary
    background: #2a8fbd
    border-color: #257fa9
    color: #ffffff

    &:hover
        background: #257fa9
        





